---
import { urlForImage } from '../lib/sanity/urlForImage';

const { asset, alt } = Astro.props.node;

const url = urlForImage(asset).width(200).url();
const webpUrl = urlForImage(asset).width(200).format('webp').url();

---

<picture>
  <source
    srcset={webpUrl}
    type="image/webp"
  />
  <img
    class="responsive__img"
    src={url}
    alt={alt}
  />
</picture>
